{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Network IAM",
  "Parameters": {
    "CloudToolsBucket": {
      "Description": "Name of the S3 bucket for cloud tools.",
      "Type": "String"
    }
  },
  "Mappings": {
  },
  "Conditions": {
  },
  "Resources": {
    "LambdaRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [{
             "Action": ["sts:AssumeRole"],
             "Principal": { "Service": ["lambda.amazonaws.com","s3.amazonaws.com"] },
             "Effect": "Allow",
             "Sid": ""
          }]
        }
      }
    },
    "LambdaRolePolicy": {
      "Type": "AWS::IAM::Policy",
       "Properties": {
         "PolicyName" : "AllowLogsAndEc2",
         "Roles": [ { "Ref": "LambdaRole" } ],
         "PolicyDocument" : {
           "Statement": [
            {
              "Sid": "AssociateDisassociateVPCFromHostedZone",
              "Action": [
                "lambda:*",
                "logs:*","s3:*",
                "iam:PassRole",
                "route53:AssociateVPCWithHostedZone",
                "route53:DisassociateVPCFromHostedZone"
              ],
              "Effect": "Allow",
              "Resource": "*"
            }
          ]
        }
      }
    }
  },
  "Outputs": {
    "LambdaRoleArn":{
      "Description":"Lambda Role Arn",
      "Value": { "Fn::GetAtt": [ "LambdaRole", "Arn"] }
    }
  }
}

